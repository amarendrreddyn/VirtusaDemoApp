<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/userDataCardHeight"
    android:layout_margin="@dimen/userCardViewMargin"
    android:layout_gravity="center"
    app:cardElevation="6dp"
  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/userDetailTextSize"
            android:textColor="@color/black"
            android:id="@+id/userFirstNameTextview">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/userDetailTextSize"
            android:textColor="@color/black"
            android:id="@+id/userLastNameTextview">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/userDetailTextSize"
            android:textColor="@color/black"
            android:id="@+id/user_mailId_textview">
        </TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>
